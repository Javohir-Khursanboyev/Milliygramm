<div class="sidebar @(isCollapsed ? "collapsed" : "")">
    <div class="sidebar-header">
        @if (!isCollapsed)
        {
            <div class="logo-header">
                <a href="/user/dashboard" class="logo">
                    <img src="/Images/Logo2.png" alt="navbar brand" class="navbar-brand" />
                </a>
            </div>
        }
        <button class="toggle-button" @onclick="ToggleSidebar">☰</button>
    </div>

    <ul class="nav nav-secondary">
        <!-- Dashboard -->
        <li class="nav-item active">
            <a href="/user/dashboard" class="nav-link">
                <i class="fas fa-home"></i>
                @if (!isCollapsed)
                {
                    <span>Dashboard</span>
                }
            </a>
        </li>

        <!-- Profile -->
        <li class="nav-item">
            <a href="/user/profile" class="nav-link">
                <i class="fas fa-user"></i>
                @if (!isCollapsed)
                {
                    <span>Profile</span>
                }
            </a>
        </li>

        <!-- Settings -->
        <li class="nav-item">
            <a href="/user/settings" class="nav-link">
                <i class="fas fa-cog"></i>
                @if (!isCollapsed)
                {
                    <span>Settings</span>
                }
            </a>
        </li>
    </ul>

</div>

@code {
    private bool isCollapsed = false;

    [Parameter]
    public EventCallback<bool> OnToggleSidebar { get; set; }

    private async Task ToggleSidebar()
    {
        isCollapsed = !isCollapsed;
        await OnToggleSidebar.InvokeAsync(isCollapsed);
    }
}
